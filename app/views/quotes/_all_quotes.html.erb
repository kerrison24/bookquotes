<div class="quotes">
  <% @quotes.each do |quote| %>
  <div class="row">
    <div class="col s12">
      <div class="card teal darken-2">
        <div class="card-content white-text">
          <p><%= quote.quote_string %></p>
        </div>
        <div class="card-action">
          <i><%= quote.book_title %> by <%= quote.book_author %></i>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
